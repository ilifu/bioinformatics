Bootstrap: localimage
From: R/bionic-R3.6.0.simg

%labels
  Maintainer Dane Kennedy

#help
  RStudio 1.1.463

%apprun rserver
  exec rserver "${@}"

%runscript
  exec rserver "${@}"

%environment
  export PATH=/usr/lib/rstudio-server/bin:${PATH}
  export RSTUDIO_VERSION=1.1.463

%post
  # Create Installation Directories and export paths. This is needed as part of post.
  # %environment scriptlet does not define these paths during %post, only after.
  export RSTUDIO_VERSION=1.1.463

  # Update apt
  apt-get update -y && DEBIAN_FRONTEND=noninteractive apt-get upgrade -y

  # Install requirements
  DEBIAN_FRONTEND=noninteractive apt-get install -y \
    ca-certificates \
    gdebi-core \
    systemd \
    wget \

  # Get and install RStudio
  cd /tmp
  wget https://download2.rstudio.org/rstudio-server-${RSTUDIO_VERSION}-amd64.deb
  gdebi -n rstudio-server-${RSTUDIO_VERSION}-amd64.deb

  # Set up config
  echo "allow 127.0.0.1\ndeny all" >> /etc/rstudio/ip-rules

  # Cleanup the container
  apt-get clean
  apt-get autoclean
  rm /tmp/rstudio-server-${RSTUDIO_VERSION}-amd64.deb
%test
  R --version | grep "${R_VERSION}"
